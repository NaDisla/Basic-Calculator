<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Basic_Calculator.App">
    <Application.Resources>
        <Style TargetType="Button" x:Key="btnNumeros">
            <Setter Property="CornerRadius" Value="35"/>
            <Setter Property="BackgroundColor" Value="#3F696A"/>
            <Setter Property="WidthRequest" Value="90"/>
            <Setter Property="HeightRequest" Value="70"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="TextColor" Value="White"/>
        </Style>
        <Style TargetType="Button" x:Key="btnOperaciones">
            <Setter Property="CornerRadius" Value="35"/>
            <Setter Property="BackgroundColor" Value="#C9DEDF"/>
            <Setter Property="WidthRequest" Value="90"/>
            <Setter Property="HeightRequest" Value="70"/>
            <Setter Property="TextColor" Value="CadetBlue"/>
            <Setter Property="FontSize" Value="40"/>
        </Style>
    </Application.Resources>
</Application>